<%- include("../partials/header") -%>

<div class="container-fluid">
    <%let i = 1%>
    <%walks.forEach(walk=>{%>
        <%if(i%2){%>
            <%i++%>
            <div class="row">
                <img class="col-md-6" src="<%=walk.image%>" alt="">
                <div class="col-md-6">
                    <h1><%=walk.name%></h1>
                    <p><%=walk.description%></p> 
                    <a class="btn btn-info" href="walks/<%=walk._id%>">More info on <%=walk.name%></a>   
                </div>
            </div>
        <%}else{%>
            <%i++%>
            <div class="row">
                <div class="col-md-6">
                    <h1><%=walk.name%></h1>
                    <p><%=walk.description%></p> 
                    <a class="btn btn-info" href="walks/<%=walk._id%>">More info on <%=walk.name%></a>   
                </div>
                <img class="col-md-6" src="<%=walk.image%>" alt="">
            </div>
        <%}%>
    <%})%>
    
</div>

<%- include("../partials/footer") -%>