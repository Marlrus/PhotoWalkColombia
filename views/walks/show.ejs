<%- include("../partials/header") -%>

<div class="container">
    <div class="card mb-3">
        <img class="card-img-top" src="<%=booking.walk[0].image%>" alt="Card image cap">
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <h3 class="card-title"><%=booking.walk[0].name%></h3>
                </div>
                <div class="col-6 text-right">
                    <strong>Price: $<%=booking.price%></strong>
                </div>
            </div>
            <p class="card-text"><%-booking.walk[0].shortDescription%></p>
            <p class="card-text"><%-booking.walk[0].description%></p>
            <p class="card-text"><small class="text-muted">Next Walk <%=booking.date.toDateString()%> starting at <%=booking.startTime%> to <%=booking.endTime%></small></p>
            <a class="btn btn-info" href="/walks/<%=booking._id%>/book">Book your spot now!</a>
            <div class="row mt-4">
                <div class="col-12">
                    <h5 class="card-title">Punto de encuentro: <strong><%=booking.meetingPoint[0].name%></strong> </h5>
                    <p><%=booking.meetingPoint[0].description%></p>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include("../partials/footer") -%>