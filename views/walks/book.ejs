<%- include("../partials/header") -%>

<div class="container mt-2 p-3 border border-info rounded">
    <div class="row">
        <img class="col-md-6" src="<%=walk.image%>" alt="Card image cap">
        <div class="col-md-6">
            <div class="row">
                <div class="col-6">
                    <h5 class="card-title">Booking form for <%=walk.name%> on <%=walk.nextDate.toDateString()%> from <%=walk.startTime%> to <%=walk.endTime%> </h5>
                </div>
                <div class="col-6 text-right">
                    <strong>Price: $<%=walk.price%></strong>
                    <p class="card-text">Total spots: <%=walk.spots%></p>
                </div>
            </div>
            <h5 class="card-title">Punto de encuentro: <%=walk.meetingPoint.name%></h5>
            <p><%=walk.meetingPoint.description%></p>
            <form action="/walks/<%=walk._id%>" method="POST">
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" name="user[name]" id="" required>
                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input type="email" class="form-control" name="user[email]" id="" required>
                </div>
                <button class="btn btn-info">Book your spot now!</button>
            </form>
        </div>
    </div>
</div>



<%- include("../partials/footer") -%>