<%- include("../partials/userHeader") -%>

<div class="container">
    <h1 class="display-3 text-center">Personalized Booking</h1>
    <form action="/user/booking/personalized" method="POST">
        <h2>Booking Details</h2>
        <div class="form-row">
            <input type="hidden" name="booking[spots]" value="1">
            <div class="form-group col-lg-4 col-md-6">
                <label>Booking Date</label> 
                <input type="date" id="datePicker" name="booking[date]" required>
            </div>
            <div class="form-group col-lg-4 col-md-6">
                <label>Start time</label>
                <input type="time" id="appt" name="booking[startTime]" value="09:00" required>
            </div>
            <div class="form-group col-lg-4 col-md-6">
                <label>Ending time</label>
                <input type="time" id="appt" name="booking[endTime]" value="12:00" required>
            </div>
            <div class="form-group col-lg-4 col-md-6">
                <label>Price USD$ </label>
                <input type="number" name="booking[price]" min="0" step="0.1" required>
            </div>
        </div>
        <h2>Walk Details</h2>
        <div class="form-group">
            <label>Walk Name</label>
            <input name="walk[name]" type="text" class="form-control" placeholder="name" required>
        </div>
        <div class="form-group">
            <label>Image URL</label>
            <input name="walk[image]" type="text" class="form-control" placeholder="Image URL/Link (Optional)">
        </div>
        <div class="form-group">
            <label>Walk Description</label>
            <textarea name="walk[description]" type="text" class="form-control" placeholder="description (Optional)" cols="30" rows="5"></textarea>
        </div>
        <h2>Meeting Point Details</h2>
        <div class="form-group">
            <label>Name</label>
            <input name="meetingPoint[name]" type="text" class="form-control" placeholder="Meeting point name" required>
        </div>
        <div class="form-group">
            <label>Location</label>
            <input name="meetingPoint[location]" type="text" class="form-control" placeholder="Paste a link for location" required>
        </div>
        <div class="form-group">
            <label>Meeting Point Description</label>
            <textarea name="meetingPoint[description]" type="text" class="form-control" placeholder="Directions/Description (Optional)" rows="5" ></textarea>
        </div>
        <button class="btn btn-lg btn-info">Submit</button>
    </form>
</div>

<script>document.getElementById('datePicker').valueAsDate = new Date();</script>
<!-- converts new Date into ISO String which is what the date input takes, however Date has a Time value T after what we need for date "2019-12-20T13:44:00.839Zâ€ˆ" we use .split to split the value a T and make them into an array with [0] as everything before "T" and [1] everythign after "T". We use [0] to get the value we need "2019-12-20" -->
<script>document.getElementById('datePicker').setAttribute('min', new Date().toISOString().split('T')[0]);</script>

