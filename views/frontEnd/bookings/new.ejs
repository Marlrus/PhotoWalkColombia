<%- include("../../partials/header") -%>
<h1 class="display-4 text-center">Book <%=booking.walk[0].name%>!</h1>

<div class="container-fluid p-4 border border-info rounded">
    <div class="row justify-content-center">
        <%if(booking.walk[0].image){%>
            <div class="col-xl-5 fill" style="background-image: url(<%=booking.walk[0].image%>);"></div>
        <%}%>
        <!-- <img class="col-lg-6" src="<%=booking.walk[0].image%>" alt="Card image cap"> -->
        <div class="col-xl-5">
            <div class="row">
                <div class="col-6">
                    <h5 class="card-title">Booking form for <%=booking.walk[0].name%> on <%=booking.date.toDateString()%> from <%=booking.startTime%> to <%=booking.endTime%> </h5>
                </div>
                <div class="col-6 text-right">
                    <strong>Price: $<%=booking.price%></strong>
                    <p class="card-text">Spots left: <%=booking.spots-booking.bookedSpots%> | Total spots: <%=booking.spots%></p>
                </div>
            </div>
            <h5 class="card-title">Meeting Point: <%=booking.meetingPoint[0].name%></h5>
            <p><%=booking.meetingPoint[0].description%></p>
            <form action="/booking/<%=booking._id%>" method="POST">
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" name="client[name]" placeholder="Full Name" id="" required>
                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input type="email" class="form-control" name="client[email]" id="" placeholder="Your email" required>
                </div>
                <div class="form-group">
                    <label>Special Needs</label>
                    <textarea name="client[specialNeeds]" type="text" class="form-control" placeholder="Anything you need us to know (i.e. Health condtitions, injuries, concerns, dietary restrictions, allergies.)" cols="30" rows="5" ></textarea>
                </div>
                <%if(booking.pickup===true || booking.personalized===true){%>
                    <div class="form-group">
                        <%if(booking.pickup){%>
                            <p><strong>This walk includes a pick-up service, please include the following:</strong></p>
                        <%}else{%>
                            <p><strong>Please include your location to coordinate a Meeting Point:</strong></p>
                        <%}%>
                        <label>Accomodation Name</label>
                        <input type="text" class="form-control" name="meetingPoint[name]" id="" placeholder="Hotel/Hostel/BnB Name" required>
                    </div>    
                    <div class="form-group">
                        <label>Address</label>
                        <textarea name="meetingPoint[description]" type="text" class="form-control" placeholder="Address for your acommodation to arrange the pickup service (Please include if the address is an airBnB or unlisted BnB)" cols="30" rows="5" required></textarea>
                    </div>
                <%}%> 
                <div class="row">
                    <div class="col-xl-6">
                        <button class="btn btn-info">Book your spot now!</button>
                    </div>
                    <div class="col-xl-6 form-group">
                        <input type="text" class="form-control" name="client[specialCode]" placeholder="Referral Code" id="">
                    </div>
                </div>   
            </form>
        </div>
    </div>
</div>



<%- include("../../partials/footer") -%>