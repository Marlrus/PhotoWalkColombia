<%- include("../partials/header") -%>

<div class="jumbotron mb-0">
    <h1 class="display-4">Welcome to Photo Walks Colombia</h1>
    <p class="lead">Your only needed resource for the best photo walks Colombia has to offer.</p>
    <hr class="my-4">
    <p>What are you waiting for! Take a walk with us at any of our experiences!</p>
    <a class="btn btn-light btn-lg" href="#" role="button">Learn more</a>
</div>

<div id="carouselExampleSlidesOnly" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="" class="d-block w-100" alt="..." style="background-image: url('https://images.unsplash.com/photo-1533699224246-6dc3b3ed3304?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80'); height: 40rem; background-size: cover; background-position: center;" data-interval='4000'>
            <div class="carousel-caption" style="top: 10%; text-shadow: 2px 3px 5px rgba(0,0,0,0.8);">
                <h1 class="display-4">Book any of our walks!</h1>
                <p class="lead">Your only needed resource for the best photo walks Colombia has to offer.</p>
            </div>
        </div>
        <%for(let booking of bookingDropdown){%>
            <div class="carousel-item">
                <img src="" class="d-block w-100" alt="..." style="background-image: url('<%=booking.walk[0].image%>'); height: 40rem; background-size: cover;
                background-position: center;" data-interval='4000'>
                <div class="carousel-caption" style="top: 10%; text-shadow: 2px 3px 5px rgba(0,0,0,0.8);">
                    <h1 class="display-4">Welcome to Photo Walks Colombia</h1>
                    <p class="lead">Your only needed resource for the best photo walks Colombia has to offer.</p>
                </div>
            </div>
        <%}%>
    </div>
</div>
    


